datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String       @id @unique @default(cuid())
  name     String
  email    String    @unique
  password String
  role     Role      @default(USER)
  address  Address[]
  orders   Order[]
  reviews  Review[]
}

model Address {
  id         Int     @id @unique @default(autoincrement())
  street     String
  city       String
  postalCode String
  country    String
  user       User    @relation(fields: [userId], references: [id])
  userId     String
  order      Order[]

  @@index([userId])
}

model Product {
  id            String          @id @unique @default(cuid())
  name          String
  description   String?
  price         String?
  image         String?
  category      Category?     @relation(fields: [categoryId], references: [id])
  categoryId    String?
  stock         String?
  meta          Meta[]
  attributes    Attribute[]
  reviews       Review[]
  orders        Order[]
  createdAt     String
  updatedAt     String
  subCategory   SubCategory? @relation(fields: [subCategoryId], references: [id])
  subCategoryId String?

  @@index([categoryId])
  @@index([subCategoryId])
}

model Category {
  id       String       @id @unique @default(cuid())
  name          String
  products      Product[]
  meta          Meta[]
  subCategories SubCategory[]

  @@unique([name, id])
}

model SubCategory {
  id       String       @id @unique @default(cuid())
  name       String    @unique
  products   Product[]
  meta       Meta[]
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  @@index([categoryId])
}

model Attribute {
id       String       @id @unique @default(cuid())
  name      String
  value     String
  product   Product @relation(fields: [productId], references: [id])
  productId String

  @@index([productId])
}

model Review {
  id       String       @id @unique @default(cuid())
  title     String
  body      String
  rating    Int
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  productId String
  userId    String
  createdAt String
  updatedAt String

  @@index([productId])
  @@index([userId])
}

model Order {
  id       String       @id @unique @default(cuid())
  user      User      @relation(fields: [userId], references: [id])
  address   Address[]
  products  Product[]
  userId    String
  createdAt String
  updatedAt String

  @@index([userId])
}

model Currency {
  id       String       @id @unique @default(cuid())
  name  String
  value String
}

// TODO: Add more meta configurations dynamically!
model Meta {
  id            Int          @id @unique @default(autoincrement())
  title         String       @unique
  name          String
  content       String
  product       Product?     @relation(fields: [productId], references: [id])
  productId     String?
  category      Category?    @relation(fields: [categoryId], references: [id])
  categoryId    String?
  subCategory   SubCategory? @relation(fields: [subCategoryId], references: [id])
  subCategoryId String?

  @@index([productId])
  @@index([categoryId])
  @@index([subCategoryId])
}

enum Role {
  ADMIN
  USER
}
